<h2 class="titulo">Registrarse </h2>

<div class="reglas2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :password ,"Contraseña" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caráteres como mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class: "form-control ancho"  %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= f.label :password_confirmation,  "Confirma tu contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control ancho"  %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= f.label :name, "Nombre" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "form-control"  %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= f.label :age , "Edad" %><br />
    <%= f.text_field :age, autofocus: true, autocomplete: "age" , class: "form-control"  %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar", class: "btn btn-primary" %> <br> <br>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>

<div class="reglas">
  <%= image_tag '9.jpg', style: "width: 800px; height: 500px;" %> <br><br>
</div>