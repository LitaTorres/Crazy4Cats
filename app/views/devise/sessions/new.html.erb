<h2 class="titulo">Iniciar sesión </h2>

<div class="reglas2">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div style="margin-bottom: 10px;">
      <%= f.label :email, "Correo" %> <br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control ancho" %>
    </div>

    <div style="margin-bottom: 10px;">
      <%= f.label :password, "Contraseña" %><br />
      <%= f.password_field :password, autocomplete: "current-password" , class: "form-control ancho" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recordar mi contraseña" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Enviar",  class: "btn btn-primary" %> <br> <br>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>

<div class="reglas">
  <%= image_tag '7.gif', style: "width: 800px; height: 500px;" %> <br><br>
</div>